@* Delete view created to allow user to select which event they would like to delete. *@

@*14.2*@
<h1>Delete Event</h1>

<form method="post">
    @foreach (var evt in ViewBag.events)
    {
        <div class="form-group">
            <label class="form-check-label">
                <span>@evt.Name</span>
                <input type="checkbox" name="eventIds" value="@evt.Id" class="form-check-input">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger">

</form>