@if (ViewBag.events.Count == 0)
{
    <p>No events yet.</p>
}
else
{
@*13.10 Exercises*@
    <table>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @*14.2*@
        @foreach (var evt in ViewBag.events)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description </td>
            </tr>
        }
    </table>
}